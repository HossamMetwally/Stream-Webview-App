<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Webview.Pages.SettingsPage"
             Title="Settings">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">

            <Label Text="Settings"
                   FontSize="24"
                   FontAttributes="Bold" />

            <!-- App version -->
            <HorizontalStackLayout>
                <Label Text="App version:" FontAttributes="Bold" />
                <Label x:Name="VersionLabel" Margin="8,0,0,0" />
            </HorizontalStackLayout>

            <!-- Clear stored login -->
            <Button Text="Clear stored login"
                    Clicked="OnClearLoginClicked" />

            <!-- Contact support -->
            <Button Text="Contact support"
                    Clicked="OnContactSupportClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
