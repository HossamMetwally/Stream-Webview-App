<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Webview.AboutPage"
             Title="About">

    <ScrollView>
        <VerticalStackLayout
            Padding="24"
            Spacing="16">

            <!-- App name -->
            <Label x:Name="AppNameLabel"
                   FontSize="24"
                   FontAttributes="Bold" />

            <!-- Version -->
            <Label x:Name="VersionLabel"
                   FontSize="14"
                   TextColor="#6B7280" />

            <!-- Company -->
            <Label Text="Company"
                   FontSize="18"
                   Margin="0,24,0,0" />
            <Label x:Name="CompanyLabel"
                   FontSize="14" />

            <!-- Website -->
            <Label Text="Website"
                   FontSize="18"
                   Margin="0,16,0,0" />
            <Button Text="Open Website"
                    Clicked="OnWebsiteClicked"
                    HorizontalOptions="Start" />

            <!-- Support -->
            <Label Text="Support"
                   FontSize="18"
                   Margin="0,16,0,0" />
            <Button Text="Email Support"
                    Clicked="OnSupportEmailClicked"
                    HorizontalOptions="Start" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
